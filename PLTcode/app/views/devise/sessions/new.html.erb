<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
   <fieldset>
    <legend>Sign in</legend>

    <div class="form-group">
      <%= f.label :username, class: "control-label col-sm-3" %>
      <div class="col-sm-3">
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-3" %>
      <div class="col-sm-3">
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
        <span class="help-inline"><%= link_to "Forgot your password?", new_password_path(resource_name) %></span>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
          <div class="col-sm-offset-3 col-sm-3 remember_block">
            <label for="user_remember_me" class="checkbox">
              <%= f.check_box :remember_me %> Remember me
            </label>
          </div>
      </div>
    <% end -%>
  </fieldset>

  <div class="form-group form-actions">
    <div class="col-sm-offset-3 col-sm-3">
      <button class="btn btn-primary" type="submit">Sign in</button> <span class="btn-wrapper"> <span>or</span>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Create your account", new_registration_path(resource_name) %>
      <% end -%></span> 
    </div>
  </div>

 <% end %>
  </div>
</div>
