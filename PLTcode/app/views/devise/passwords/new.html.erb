<div class="row">
  <div class="col-md-12">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
   <fieldset>
   <legend>Forgot your password?</legend>
   <%= devise_error_messages! %>

     <div class="form-group">
       <%= f.label :email, class: "control-label col-sm-3" %>
       <div class="col-sm-3">
         <%= f.email_field :email, class: "form-control" %>
       </div>
     </div>

     <div class="form-group form-actions">
       <div class="col-sm-offset-3 col-sm-3">
         <button class="btn btn-primary" type="submit">Send me reset password instructions</button>       
       </div>
     </div>

   <fieldset>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>
